{
  "name": "Email Variations",
  "description": "Input different email address for every domain using '+' sign",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "materials/icon16.png",
    "32": "materials/icon32.png",
    "48": "materials/icon48.png",
    "128": "materials/icon128.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://*/*"]
    }
  ],
  "permissions": ["activeTab", "storage"]
}
