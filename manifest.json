{
  "name": "Gmail Variations",
  "description": "Input different Gmail address for every domain using '+' sign",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://*/*"]
    }
  ],
  "permissions": ["activeTab", "storage"]
}
